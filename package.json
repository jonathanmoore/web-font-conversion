{
  "name": "font-converter-preview",
  "version": "1.0.0",
  "description": "Converts OTF fonts to WOFF/WOFF2 and generates an HTML preview.",
  "main": "generate_preview.js",
  "type": "module",
  "scripts": {
    "build": "bash ./convert_fonts.sh",
    "preview": "node ./generate_preview.js",
    "start": "npm run build && npm run preview",
    "serve": "node ./server.js"
  },
  "keywords": [
    "font",
    "woff",
    "woff2",
    "otf",
    "preview",
    "converter"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "hono": "^4.7.6",
    "@hono/node-server": "^1.3.0"
  }
}
