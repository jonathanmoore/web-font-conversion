{
  "name": "font-converter-preview",
  "version": "1.0.0",
  "description": "Converts OTF/TTF fonts to WOFF2 format and generates an HTML preview with Tailwind CSS.",
  "main": "app/generate_preview.js",
  "type": "module",
  "scripts": {
    "build": "node ./app/convert_fonts.js",
    "preview": "node ./app/generate_preview.js",
    "serve": "node ./app/server.js",
    "start": "npm run build && npm run preview && npm run serve"
  },
  "keywords": [
    "font",
    "woff2",
    "otf",
    "ttf",
    "preview",
    "converter",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "hono": "^4.7.6",
    "@hono/node-server": "^1.3.0",
    "ttf2woff2": "^6.0.1"
  }
}
